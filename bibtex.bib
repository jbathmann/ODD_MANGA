journal = {Estuarine, Coastal and Shelf Science},
month = {apr},
pages = {106797},
publisher = {Academic Press},
title = {{Partial canopy loss of mangrove trees: Mitigating water scarcity by physical adaptation and feedback on porewater salinity}},
year = {2020}
}
